<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    >

    <LinearLayout
        android:id="@+id/LL1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="30dp"
        android:paddingVertical="30dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/rounded"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ketut Nila Arta"
            android:textColor="@color/teksPutih"
            android:id="@+id/tv_nama"
            android:gravity="center"
            android:textSize="25dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/teksPutih"
            android:id="@+id/tv_nohp"
            android:text="089 537 834 7458"
            android:gravity="center"
            android:textSize="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/LL1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:paddingHorizontal="10dp"
        android:paddingVertical="20dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/rounded"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jalan Nuansa utama selatan 7 no 12"
            android:textColor="@color/teksPutih"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:id="@+id/tv_alamat"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_hubungan"
            android:text="Diri Sendiri"
            android:gravity="center"
            android:textColor="@color/teksPutih"
            android:textSize="20dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:weightSum="3"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Ubah"
            android:id="@+id/tv_ubah"
            android:gravity="center"
            android:textColor="@color/teksPutih"
            android:textSize="20dp"/>

        <TextView
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Hapus"
            android:textColor="@color/teksPutih"
            android:gravity="center"
            android:textSize="20dp"
            android:id="@+id/tv_hapus"
            android:layout_width="1dp" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:textColor="@color/teksPutih"
            android:text="Tambah"
            android:gravity="center"
            android:id="@+id/tv_tambah"
            android:textSize="20dp"/>


    </LinearLayout>

</RelativeLayout>